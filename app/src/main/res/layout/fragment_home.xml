<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.cm.mediatracker.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <Button
            android:id="@+id/btMovies"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#854D27"
            android:text="Movies" />

        <Button
            android:id="@+id/btSeries"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_below="@+id/btMovies"
            android:layout_weight="1"
            android:background="#DD7230"
            android:text="Series" />

        <Button
            android:id="@+id/btAnimes"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_below="@+id/btSeries"
            android:layout_weight="1"
            android:background="#F4C95D"
            android:text="Animes" />
    </LinearLayout>

</FrameLayout>
